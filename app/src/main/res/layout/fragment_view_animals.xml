<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioGoats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ΓΙΔΙΑ"/>

        <RadioButton
            android:id="@+id/radioSheeps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ΠΡΟΒΑΤΑ"/>
    </RadioGroup>


    <TableLayout
        android:id="@+id/tableLayoutAnimals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2,3,4"
        android:divider="@android:color/darker_gray"
        android:showDividers="middle"
        android:background="@android:color/white">

        <!-- Επικεφαλίδες για τον πίνακα -->
        <TableRow
            android:layout_weight="0"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="ID"
                android:textColor="@android:color/white"
                android:padding="8dp"
                android:gravity="center"
                android:layout_weight="1" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Tag"
                android:textColor="@android:color/white"
                android:padding="8dp"
                android:gravity="center"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:text="Gender"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Birthdate"
                android:textColor="@android:color/white"
                android:padding="8dp"
                android:gravity="center"
                android:layout_weight="1" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Έχει γεννήσει κάτω του έτους"
                android:textColor="@android:color/white"
                android:padding="8dp"
                android:gravity="center"
                android:layout_weight="1" />
        </TableRow>

        <!-- Εδώ θα προστίθενται οι γραμμές δεδομένων -->
    </TableLayout>

</LinearLayout>
